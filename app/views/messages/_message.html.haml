.message-field{data: {message: {id: message.id}}}
  .message-title
    .message-title__username
      = message.user.name
    .message-title__date
      = message.created_at.strftime("%Y年%m年%d日 %H時%M分")
  .message
    - if message.content.present?
      %p.message__content
        = message.content
    = image_tag message.image.url, class: "message__image" if message.image.present?